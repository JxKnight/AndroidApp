<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_backgound"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow>

            <TextView
                android:id="@+id/ReceiptId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20dp"
                android:text="Receipt ID"
                android:layout_weight="2"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/SenderID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="SenderID"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/SenderDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="SenderDate"
                android:textSize="20dp" />

            <Button
                android:id="@+id/addCatogories"
                android:layout_height="35dp"
                android:layout_width="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mybutton"
                android:onClick="myClickHandler"
                android:text="Add"
                />

        </TableRow>

    </TableLayout>

</RelativeLayout>